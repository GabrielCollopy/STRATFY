@model STRATFY.Models.Grafico

@{
    ViewData["Title"] = "Novo Gráfico";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-5 shadow" style="background-color: #03045e; width: 100%; max-width: 600px; color: white; border-radius: 24px;">
        <h2 class="text-center mb-4">Novo Gráfico</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <div class="mb-3">
                <label asp-for="DashboardId" class="form-label"></label>
                <select asp-for="DashboardId" class="form-control rounded-3" asp-items="ViewBag.DashboardId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control rounded-3" />
                <span asp-validation-for="Titulo" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label"></label>
                <input asp-for="Tipo" class="form-control rounded-3" />
                <span asp-validation-for="Tipo" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Campo1" class="form-label"></label>
                <input asp-for="Campo1" class="form-control rounded-3" />
                <span asp-validation-for="Campo1" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Campo2" class="form-label"></label>
                <input asp-for="Campo2" class="form-control rounded-3" />
                <span asp-validation-for="Campo2" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cor" class="form-label"></label>
                <div class="input-group align-items-center">
                    <input asp-for="Cor" class="form-control rounded-start" id="corTexto" />
                    <input type="color" id="corPicker" class="form-control-color rounded-end" style="width: 45px; height: 38px; border: none; cursor: pointer;" />
                </div>
                <span asp-validation-for="Cor" class="text-warning"></span>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" asp-for="AtivarLegenda" id="ativarLegenda" />
                <label class="form-check-label" for="ativarLegenda">@Html.DisplayNameFor(model => model.AtivarLegenda)</label>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn rounded-pill" style="background-color: #00b4d8; color: white;">Criar</button>
                <a asp-action="Index" class="btn btn-light rounded-pill">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const corTexto = document.getElementById("corTexto");
        const corPicker = document.getElementById("corPicker");

        corPicker.addEventListener("input", function () {
            corTexto.value = corPicker.value;
        });

        window.addEventListener("DOMContentLoaded", function () {
            if (corTexto.value) {
                corPicker.value = corTexto.value;
            }
        });
    </script>
}
