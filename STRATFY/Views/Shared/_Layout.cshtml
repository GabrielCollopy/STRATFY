<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STRATFY</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/Images/Stratfy-Icon.ico" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/STRATFY.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.2.2/datatables.min.css" rel="stylesheet" />

</head>
<body>
        <aside class="sidebar">
            <header class="sidebar-header">
                <a href="#" class="header-logo">
                    <img src="~/Images/Nome_Stratfy.png" alt="logo stratfy">
                </a>
            </header>

            <nav class="sidebar-nav">
                <ul class="nav-list primary-nav">
                    <li class="nav-item">
                        <a asp-controller="Usuarios" asp-action="Edit" class="nav-link">
                            <span class="bi bi-person"></span>
                            <span class="nav-label">Minha Conta</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Extratos" asp-action="Index" class="nav-link">
                            <span class="bi bi-wallet"></span>
                            <span class="nav-label">Extratos</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Dashboards" asp-action="Index" class="nav-link">
                            <span class="bi bi-bar-chart"></span>
                            <span class="nav-label">Dashboard</span>
                        </a>
                    </li>
                </ul>

                <ul class="nav-list secondary-nav">
                    <li class="nav-item">
                        <form asp-controller="Login" asp-action="Logout" method="post" class="nav-link">
                            <button type="submit" class="nav-link btn btn-link p-0 border-0">
                                <span class="bi bi-box-arrow-left"></span>
                                <span class="nav-label">Sair</span>
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
        </aside>


    <div class="main-content">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.2.2/datatables.min.js"></script>
</body>
</html>