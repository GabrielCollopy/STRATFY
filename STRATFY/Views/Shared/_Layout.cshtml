<!DOCTYPE html>
<html lang="en" style="background-color: #C4f0f8">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STRATFY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/STRATFY.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar bg-light p-3">
            <div class="d-flex">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="img-logo" src="~/Images/Stratfy_Logo.png" alt="Stratfy Logo" />
                </a>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Extratos" asp-action="Index">Extratos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Movimentacoes" asp-action="Index">Movimentações</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Dashboards" asp-action="Index">Dashboards</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Graficos" asp-action="Index">Graficos</a>
                </li>
            </ul>
            <form asp-controller="Login" asp-action="Logout" method="post" class="mt-4">
                <button type="submit" class="btn btn-outline-danger w-100">Sair</button>
            </form>
        </nav>

        <div style ="background-color: #c4f0f8" class="content flex-grow-1 p-3">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>
    @* <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
