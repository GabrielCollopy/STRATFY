@model STRATFY.Models.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-4" style="background-color: #e0f7fa;">
                    <h2 class="text-center mb-4">Entrar</h2>

                    @* Alerta de retorno ao tentar acessar página privada *@
                    @if (!string.IsNullOrEmpty(ViewData["Mensagem"] as string))
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            @ViewData["Mensagem"]
                        </div>
                    }

                    @* Somente mostra se houver erro de login *@
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    }

                    <form asp-action="Login" method="post">
                        <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control rounded-3" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label">Senha</label>
                            <input asp-for="Senha" type="password" class="form-control rounded-3" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">Entrar</button>
                            <a asp-action="Cadastrar" class="btn btn-outline-secondary rounded-pill">Cadastrar-se</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
