@model IEnumerable<STRATFY.Models.Dashboard>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="flex-grow-1 text-center">
        <h1 class="mb-0 title">Dashboards</h1>
    </div>
    <div class="text-end" style="min-width: 160px;">
        <a asp-action="Create" class="btn btn-light rounded-pill">Criar Dashboard</a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
            <div class="feature-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Descricao</h5>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-2">Alterar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm me-2">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
