@model DashboardVM

@{
    ViewData["Title"] = "Criar Dashboard";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-5 shadow" style="background-color: #03045e; width: 100%; max-width: 800px; color: white; border-radius: 24px;">
        <h2 class="text-center mb-4">Criar Dashboard</h2>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <div class="mb-4">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control rounded-3" />
            </div>

            <div class="mb-4">
                <label asp-for="ExtratoId" class="form-label"></label>
                <select asp-for="ExtratoId" asp-items="Model.ExtratosDisponiveis" class="form-control rounded-3"></select>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <button type="submit" name="action" value="personalizado" class="btn btn-info rounded-pill">Criar Personalizado</button>
                <button type="submit" name="action" value="padrao" class="btn btn-light rounded-pill">Criar Dash Padrão</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}